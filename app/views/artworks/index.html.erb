<h1> Welcome, <%= current_artist.first_name %> </h1> 
<%= link_to 'New Artwork', new_artwork_path %>


<div class="container-images">
    <div class="grid js-masonry"
      data-masonry-options='{ "itemSelector": ".grid-item", "columnWidth": 320 }'>
      <% @artworks.each do |artwork| %>
        <%= artwork.name %></br>
        <!-- <td> Artist: <%= Artist.where(id: (artwork.artist_id)).first.full_name %> </td> -->
